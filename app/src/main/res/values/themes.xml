<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InventoryApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/amaranth_pink</item>
        <item name="colorPrimaryVariant">@color/lavender_floral</item>
        <item name="colorOnPrimary">@color/dark_liver</item>
        <item name="colorSecondary">@color/electric_blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/dark_liver</item>
        <item name="colorSurface">@color/baby_powder</item>
        <item name="colorOnSurface">@color/dark_liver</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:colorBackground">@color/baby_powder</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
    </style>

    <!--styling for toolbars-->
    <style name="ToolbarStyle" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="minHeight">?attr/actionBarSize</item>
        <item name="titleCentered">true</item>
        <item name="title">@string/main_title</item>
    </style>

    <!--styling for image buttons-->
    <style name="IconButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="backgroundTint">@color/baby_powder</item>
        <item name="iconGravity">textStart</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="android:iconTint">@color/dark_liver</item>
    </style>

    <!--styling for dialog text inputs-->
    <style name="DialogEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/baby_powder</item>
    </style>

    <!--styling for dialog labels-->
    <style name="DialogTextView" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:background">@color/baby_powder</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_liver</item>
    </style>

    <style name="DialogHeaderTextView" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:background">@color/amaranth_pink</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/dark_liver</item>
    </style>
    <!--styling for inventory headers-->
    <style name="InventoryHeader" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/inventory_border</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_liver</item>
        <item name="android:gravity">center</item>
    </style>

    <!--styling for inventory items in list-->
    <style name="InventoryItem" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/inventory_border</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_liver</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="@style/ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
        <item name="backgroundColor">?attr/colorSurface</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dark_liver</item>
    </style>

    <style name="RegisterTextEdit" parent="@style/Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/baby_powder</item>
        <item name="android:tag">register_input</item>
    </style>
</resources>