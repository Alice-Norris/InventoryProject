<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/entryProductSku"
        style="@style/InventoryTextViewEndLeft"
        android:ems="4"
        android:maxLength="6"
        android:maxLines="1"
        android:textAlignment="center" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/entryProductName"
        style="@style/InventoryTextView"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="16sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/entryProductQty"
        style="@style/InventoryTextViewEndRight"
        android:ems="3"
        android:maxLength="5"
        android:maxLines="1"
        android:textAlignment="center" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/deleteButton"

        style="@style/IconButtonStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:insetTop="-1dp"
        app:cornerRadius="0dp"
        app:icon="@drawable/ic_delete_button"
        app:iconTint="@color/dark_liver"
        tools:ignore="SpeakableTextPresentCheck" />
</LinearLayout>